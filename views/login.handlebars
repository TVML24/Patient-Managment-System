    <section class="py-5 hero">
      <div class="container">
        <h1>Welcome to the Patient Management System Application</h1>
        <p class="lead">
          Making the management of patients easier, so hospital staff have more time to spend on the things that matter.
        </p>

        <div class="log-box-login">
          <h1>Log In</h1>
          <form class="form login-form">
            <div class="input-user" class="form-group">
            <i class="fas fa-envelope" style="color: rgb(245, 241, 241);"></i>
            <label for="email-login">Email:</label>
            <input class="form-input" type="email" placeholder="User Email" id="email-login" />
          </div>
          <div class="input-user" class="form-group">
            <i class="fas fa-key"></i>
            <label for="password-login">Password:</label>
            <input class="form-input" type="password" placeholder="User Password" id="password-login" />
            <span class="hideShowPassword">
                <i id="hide1" class="fa fa-eye"></i>
                <i id="hide2" class="fa fa-eye-slash"></i>
            </span>
          </div>

          <script>
            const hideShowPassword = document.querySelector('.hideShowPassword');
            const passwordInput = document.getElementById('password-login');

            hideShowPassword.addEventListener('click', function () {
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
            } else {
                passwordInput.type = 'password';
            }
            });
          </script>
          <div class="form-group"></div>
            <button type="submit" type="button" class="login-btn" class="btn btn-primary">Log In</button>
          </div>
          </form>
        </div>
    </section> 

    <script src="/js/login.js"></script>
